
define opcode[controller=ApiOrder, baseURL='/api/v1/']
{
    [method=post, action='order/add', noauth, overwrite=false]
    addOrder 3001 '주문'

    [method=post, action='order/status', noauth, overwrite=false]
    cancelOrder 3002 '주문 상태 변경'

   
}

/**
 * 주문 
 * 3001
 */
req addOrder {
  orderStatus Type;
  
  memberId Long;
  deliveryId Long;
}

res addOrder {
  orderId Long;
}

/**
 * 주문 상태 변경 
 * 3002
 */
req cancelOrder {
  orderId Long;
}

res cancelOrder {
}


